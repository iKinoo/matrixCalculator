{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // files
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/*/*.cpp",
                "${workspaceFolder}/src/*/*.h",
                "${workspaceFolder}/src/*/*/*.cpp",
                "-o",
                "${workspaceFolder}/bin/matrixCalculator"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}